@page "/"

<PageTitle>Menees Chord Sheet Converter</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="from" class="text-nowrap">Input From:</label>
                    <select id="from" @bind="@FromType" @bind:event="onchange" class="form-select my-2">
                        <option value="General">General</option>
                        <option value="ChordPro">ChordPro</option>
                    </select>
                    <button class="btn btn-primary text-nowrap" @onclick="ConvertInput">
                        <i class="oi oi-share"></i> Convert
                    </button>
                    <div class="form-check form-switch">
                        <input id="whenTyping" type="checkbox" class="form-check-input" @bind="WhenTyping" @bind:event="onchange" />
                        <label for="whenTyping" class="form-check-label text-nowrap">When Typing</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <textarea @bind="@Input" @bind:event=@InputChangeEvent style="height: 80vh" spellcheck="false" wrap="hard"
                                class="form-control font-monospace w-100"></textarea>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="to" class="text-nowrap">Output To:</label>
                    <select id="to" @bind="@ToType" @bind:event="onchange" class="form-select my-2">
                        <option value="ChordPro">ChordPro</option>
                        <option value="MobileSheets">MobileSheets</option>
                    </select>
                    <button class="btn btn-secondary text-nowrap" @onclick="CopyToClipboardAsync" disabled=@copyState.IsDisabled>
                        <i class="@copyState.ClassName"></i> @copyState.Text
                    </button>
                    <button class="btn btn-secondary text-nowrap" @onclick="SaveAs">
                        <i class="oi oi-data-transfer-download"></i> Save As...
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <textarea @bind="@output" style="height: 80vh" spellcheck="false" wrap="hard"
                                class="form-control font-monospace w-100"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>



